@import "./base"
@import "./layout"
@import "./mixin"
@import "./animation"

.bili-icon, .icon
  display inline-block
  background-image url(../images/base/icons.png)

.lazy-img
  background url(../images/base/lazyload.png) 50% no-repeat
  width 100%
  height 100%
  display inline-block
  img
    display block
    width 100%
    height 100%

img
  border none
  vertical-align middle

em
  font-weight 400
  font-style normal

a
  transition: color .2s;

.watch-later-trigger
  display none
  width 22px
  height 22px
  position absolute
  right 6px
  bottom 4px
  cursor pointer
  background-image url('~assets/images/content/w-later.png')
